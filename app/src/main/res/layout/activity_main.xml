<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Storm Watch"
        android:id="@+id/textView"
        android:textSize="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Typhoon"
        android:id="@+id/BTyphoon"
        android:layout_marginLeft="38dp"
        style="@style/TextAppearance.AppCompat.Base.SearchResult.Subtitle"
        android:onClick="buttonOnClick"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Routes"
        android:id="@+id/BRoutes"
        android:layout_marginBottom="52dp"
        android:layout_above="@+id/BTyphoon"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginRight="37dp"
        android:onClick="buttonOnClick1"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="News"
        android:id="@+id/BNews"
        android:layout_below="@+id/BTyphoon"
        android:layout_alignRight="@+id/BRoutes"
        android:layout_alignEnd="@+id/BRoutes"
        android:layout_marginTop="85dp"
        android:layout_alignLeft="@+id/BRoutes"
        android:layout_alignStart="@+id/BRoutes"
        android:textSize="20dp"
        android:onClick="buttonOnClick2" />
</RelativeLayout>
